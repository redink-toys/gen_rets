{erl_opts, [ debug_info
           , warnings_as_errors
           ]}.

{cover_enabled, true}.

{xref_checks, [undefined_function_calls, undefined_functions,
               locals_not_used, deprecated_function_calls, deprecated_functions]}.

{deps, [
    {gululog, ".*", {git, "https://github.com/gulumq/gululog.git", {branch, "master"}}},
    {lz4, ".*", {git, "https://github.com/szktty/erlang-lz4.git", {branch, "master"}}},
    {recon, ".*", {git, "https://github.com/ferd/recon.git", {branch, "master"}}}
]}.